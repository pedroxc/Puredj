# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# HTML, CSS, JS
[*.{html,css,js}]
indent_style = space
indent_size = 4

# JSON, YAML
[*.{json,yml,yaml}]
indent_style = space
indent_size = 2

# PHP
[*.php]
indent_style = space
indent_size = 4

# Markdown
[*.md]
trim_trailing_whitespace = false

# Makefile
[Makefile]
indent_style = tab
